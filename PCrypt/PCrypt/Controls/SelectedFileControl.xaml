<UserControl x:Class="PCrypt.Controls.SelectedFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCrypt.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid DragDrop.Drop="OnFileDrop" AllowDrop="True">
        <local:DragDropMessageControl x:Name="DropFileControl"
                                      Height="120" Width="120" VerticalAlignment="Center" HorizontalAlignment="Center" />

        <ScrollViewer>
            <StackPanel x:Name="FileContainer">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
