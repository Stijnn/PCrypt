<UserControl x:Class="PCrypt.Views.FileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCrypt.Views"
             xmlns:controls="clr-namespace:PCrypt.Controls"
             xmlns:fileviewviews="clr-namespace:PCrypt.Views.FileViewViews"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1270">
    <Grid>
        <TabControl TabStripPlacement="Top" Background="Transparent" Controls:TabControlHelper.Underlined="TabPanel" >
            <Controls:MetroTabItem Header="Encrypt file(s)" Controls:ControlsHelper.HeaderFontSize="16">
                <fileviewviews:EncryptorFileView BorderThickness="0"/>
            </Controls:MetroTabItem>
            <Controls:MetroTabItem Header="Decrypt file(s)" Controls:ControlsHelper.HeaderFontSize="16">
                <fileviewviews:DecryptorFileView BorderThickness="0"/>
            </Controls:MetroTabItem>
        </TabControl>
    </Grid>
</UserControl>
